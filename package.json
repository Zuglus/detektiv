{
  "name": "detektiv",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/generate-translations.js && next build && node scripts/generate-sitemap.mjs",
    "serve": "npx serve@latest out",
    "lint": "eslint . --cache --cache-location .eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .eslintcache",
    "test:unit": "jest",
    "test": "npm run test:unit && npm run test:e2e:run",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:run": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test",
    "all": "npm run lint && npm run build && npm run test:unit && npm run test:e2e:run && npm run serve",
    "sync-translations": "node scripts/generate-translations.js"
  },
  "description": "Сайт детектива Грозного",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-config-next": "^15.4.5",
    "gray-matter": "^4.0.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "marked": "^16.1.1",
    "next": "^14.2.31",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2"
  }
}
